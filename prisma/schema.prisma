generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String
  fisrtName String
  email String @unique

  // Relation
}

model Project {
  id      Int @id  @default(autoincrement())
  title   String
  description String
  creationDate DateTime @default(now())
  deadline DateTime 

  // Relation
  tasks Task[]
}

model Task {
  id Int @id @default(autoincrement())
  title String
  description String
  tag String[]
  deadline DateTime

  // Relation
  projectId Int
  project Project @relation(fields: [projectId] , references: [id])
}
